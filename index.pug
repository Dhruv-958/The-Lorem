block title-content     
    title The Lorem Hotel - Check-in
block content
    <div class="form-contain">
        <div class="form-container">
            <h1 class="rem3 head-font center">CHECK-<span style="color: #F0A04B;">IN</span></h1>
            <form action="/check-in" method="post">
                <div class="section center">
                    <input type="text" name="name" placeholder="Enter Name" class="input-form">
                    <input type="phone" name="phone" placeholder="Enter Phone No." class="input-form">
                    <input type="email" name="email" placeholder="Enter Email" class="input-form">
                </div>
                <div class="section center">
                    <input type="number" name="number" placeholder="No. of Members" class="input-form">
                    <div class="date-s center" style="width: 1650px;">
                       <p style="width: 90px; font-family: 'Josefin Sans', sans-serif;" class="center">Check-in</p>
                        <input type="datetime-local" name="date" class="input-form">
                    </div>
                    <div class="date-s center" style="width: 1650px;">
                        <p style="width: 90px; font-family: 'Josefin Sans', sans-serif;" class="center">Check-out</p>
                        <input type="datetime-local" name="ldate" class="input-form">
                    </div>
                </div>
                <div class="section center">
                    input(type="number", name = "room" placeholder="Enter Room No." class="input-form")
                    <input type="password" name="pass" placeholder="Enter password" class="input-form">
                    <input type="password" name="con_pass" placeholder="Confirm password" class="input-form">
                </div>
                <button class="btn">Submit</button>
            </form>
        </div>
    </div>